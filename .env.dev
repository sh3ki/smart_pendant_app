# Environment Configuration - Development
ENV=dev

# API Configuration
API_BASE_URL=https://dev-api.smartpendant.com
WEBSOCKET_URL=wss://dev-api.smartpendant.com/ws
API_TIMEOUT_SECONDS=30

# Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firebase (Use debug/dev Firebase project)
# Note: Actual Firebase config is in google-services.json / GoogleService-Info.plist

# Feature Flags
ENABLE_MOCK_DATA=true
ENABLE_DEBUG_LOGGING=true
ENABLE_NETWORK_LOGGING=true

# Telemetry Defaults
DEFAULT_TELEMETRY_INTERVAL_SECONDS=15
DEFAULT_IMAGE_REFRESH_INTERVAL_SECONDS=5
DEFAULT_SNAPSHOT_QUALITY=medium

# Real-time Configuration
ENABLE_WEBSOCKET=true
WEBSOCKET_RECONNECT_DELAY_MS=3000
FALLBACK_TO_POLLING=true
POLLING_INTERVAL_SECONDS=30

# Performance
IMAGE_CACHE_MAX_SIZE_MB=100
MAX_BREADCRUMB_POINTS=100

# Security
ENABLE_CERTIFICATE_PINNING=false
